# API Key da Anthropic (Claude)
# Obtenha em: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sua_chave_api_aqui

# Google API Key (opcional - para usar Gemini)
# Obtenha em: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=sua_chave_google_aqui

# Supabase Configuration
# Obtenha em: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua_chave_anon_aqui
SUPABASE_SERVICE_KEY=sua_chave_service_role_aqui

# Database Provider: "sqlite" (local) ou "supabase" (cloud)
DATABASE_PROVIDER=sqlite

# Transcription Provider: "openai_whisper" (local) ou "google_gemini" (nuvem)
TRANSCRIPTION_PROVIDER=openai_whisper

# LLM Provider: "anthropic_claude" ou "google_gemini"
LLM_PROVIDER=anthropic_claude
